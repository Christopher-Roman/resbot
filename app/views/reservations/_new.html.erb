<div class="row" >
	<%= form_for :reservation  do |f| %>

			<%= f.label :res_name %> <br>
			<%= f.text_field(:res_name, {:name => 'res_name', :class => 'form-control', :placeholder => 'Party Name'}) %>
			<br>
			<%= f.label :party_size %> <br>
			<%= f.number_field(:party_size, {:name => 'party_size', :class => 'form-control', :placeholder => 'Party Size'}) %>
			<br>

			<%= f.label :res_day %> <br>
			<%= f.select :res_day, options_for_select([['Sat','Sat'], ['Sun', 'Sun'], ['Mon', 'Mon'], ['Tue', 'Tue'], ['Wed', 'Wed'], ['Thu', 'Thu'], ['Fri', 'Fri']]), {prompt: 'Choose one...'}, { :class => 'form-control', :name => 'res_day'} %>
			<br>
			<%= f.label :res_time %> <br>
			<%= f.select(:res_time, options_for_select([['1AM','1AM'],['2AM','2AM'],['3AM', '3AM'],['4AM', '4AM'],['5AM', '5AM'],['6AM', '6AM'],['7AM', '7AM'],['8AM', '8AM'],['9AM','9AM'],['10AM', '10AM'],['11AM', '11AM'],['12AM', '12AM'],['1PM','1PM'],['2PM','2PM'],['3PM', '3PM'],['4PM', '4PM'],['5PM', '5PM'],['6PM', '6PM'],['7PM', '7PM'],['8PM', '8PM'],['9PM','9PM'],['10PM', '10PM'],['11PM', '11PM'],['12PM', '12PM']]), {prompt: 'Choose one...'}, { :class => 'form-control', :name => 'res_time'} )%>
			<br>
			<br>
			<%= f.submit({:class => 'btn btn-secondary'})%>


	<%end %>
</div>