<div class="row" >
	<%= form_for :reservation do |f| %>

			<%= f.label :res_name %> <br>
			<%= f.text_field(:res_name, {:name => 'res_name', :class => 'form-control', :placeholder => 'Party Name'}) %>
			<br>
			<%= f.label :party_size %> <br>
			<%= f.number_field(:party_size, {:name => 'party_size', :class => 'form-control', :placeholder => 'Party Size'}) %>
			<br>
			<%= f.label :res_day %> <br>
			<%= f.text_field(:res_day, {:name => 'res_day', :class => 'form-control', :placeholder => 'Reservation Date'}) %>
			<br>
			<%= f.label :res_time %> <br>
			<%= f.text_field(:res_time, {:name => 'res_time', :class => 'form-control', :placeholder => 'Reservation Date'}) %>
			<br>
			<%= f.submit({:class => 'btn btn-secondary'})%>


	<%end %>
</div>